{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://www.shutterstock.com/image-photo/beautiful-sunset-sousse-tunisia-cityscape-260nw-560089576.jpg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
      <h1>Register</h1><br>
        {{ form_start(registrationForm) }}
        <!-- Email input -->
          <div class="form-outline mb-4">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form1Example13'}}) }}
            {{ form_label(registrationForm.email, 'Email address', {'label_attr': {'class': 'form-label'}}) }}
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg', 'id': 'form1Example23'}}) }}
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block" Onclick="/base">Sign in</button>

        {{ form_end(registrationForm) }}
      </div>
    </div>
  </div>
</section>
{% endblock %}
